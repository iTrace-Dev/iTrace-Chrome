{
  "manifest_version": 2,

  "name": "iTrace-Chrome Plugin",
  "description": "Plugin which allows for tracking eyegaze data on webpages in Chrome.",
  "version": "0.0.1",
  "content_scripts": [
    {
      "matches": ["*://github.com/*"],
      "js": ["/assets/js/loader.js"]
    }
  ],
  "background": {
    "persistent": true,
    "scripts": ["/assets/js/jquery-3.3.1.js", "/assets/js/background.js"]
  },
  "browser_action": {
    "default_icon": {                    
      "16": "icon16.png",
      "48": "icon48.png",
      "128": "icon128.png"
    },
    "default_popup": "popup.html"
  },
  "permissions": [
	  "tabs",
    "activeTab",
    "downloads"
  ]
}
